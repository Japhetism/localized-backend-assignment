{
    "swagger": "2.0",
    "info": {
      "version": "0.1.9",
      "title": "Babatunde Localized Backend Assignment",
      "description": "News  Feeds Platform",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "host": "babatunde-assignment.herokuapp.com",
    "basePath": "/",
    "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header",
            "scheme": "bearer"
        }
    },
    "tags": [
        {
            "name": "Authentication",
            "description": "API for user authentication"
        },
        {
            "name": "NewsFeeds",
            "description": "API for news feeds"
        }
    ],
    "paths": {
        "/login": {
            "post": {
                "tags": ["Authentication"],
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "Login request",
                        "schema": {
                          "$ref": "#/definitions/AuthenticationRequest"
                        }
                    }
                ],
                "produces": ["application/json"],
                "summary": "User login",
                "responses": {
                    "200": {
                        "description": "Successful login response",
                        "schema": {
                            "$ref": "#/definitions/AuthenticationResponse"
                        }
                    },
                    "400": {  
                        "description": "Bad request",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/news-feeds": {
            "get": {
                "security": [ { "Bearer": [] } ],
                "tags": ["NewsFeeds"],
                "parameters": [
                    {  
                        "name": "currentPage",
                        "in": "query",
                        "description": "Current page number of news feeds",
                        "required":false,
                        "type": "number"
                    },
                    {  
                        "name": "pageSize",
                        "in": "query",
                        "description": "Maximum number of news feeds return",
                        "required":false,
                        "type": "number"
                    },
                    {  
                        "name": "sortBy",
                        "in": "query",
                        "description": "Sort entity",
                        "required":false,
                        "type": "string"
                    }
                ],
                "summary": "Get all news feeds in the system",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {  
                            "$ref": "#/definitions/NewsFeeds"
                        }
                    },
                    "400": {  
                        "description": "Bad request",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    },
                    "404": {
                        "description": "Page not found",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "AuthenticationRequest": {
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "AuthenticationRequest": {
                "type": "array",
                "$ref": "#/definitions/AuthenticationRequest"
            }
        },
        "AuthenticationResponse": {
            "properties": {
                "message": {
                    "type": "string"
                },
                "status": {
                    "type": "string"
                },
                "token": {
                    "type": "string"
                },
                "token_type": {
                    "type": "string"
                },
                "data": {
                    "properties": {
                        "user": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "integer",
                                    "uniqueItems": true
                                },
                                "firstName": {
                                    "type": "string"
                                },
                                "lastName": {
                                    "type": "string"
                                },
                                "email": {
                                    "type": "string"
                                },
                                "mobile": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "AuthenticationResponse": {
                "type": "array",
                "$ref": "#/definitions/AuthenticationResponse"
            }
        },
        "NewsFeeds": {
            "properties": {
                "status": {
                    "type": "string"
                },
                "data": {
                    "properties": {
                        "responseData": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "integer",
                                        "uniqueItems": true
                                    },
                                    "firstName": {
                                        "type": "string"
                                    },
                                    "lastName": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "city": {
                                        "type": "string"
                                    },
                                    "country": {
                                        "type": "string"
                                    },
                                    "countryCode": {
                                        "type": "string"
                                    },
                                    "date": {
                                        "type": "string"
                                    },
                                    "message": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "metaData": {
                            "type": "object",
                            "properties": {
                                "currentPage": {
                                    "type": "number"
                                },
                                "pageCount": {
                                    "type": "number"
                                },
                                "pageSize": {
                                    "type": "number"
                                },
                                "count": {
                                    "type": "number"
                                }
                            }
                        }
                    }
                }
            },
            "NewsFeeds": {
                "type": "array",
                "$ref": "#/definitions/NewsFeeds"
            }
        },
        "Error": {
            "properties": {
                "message": {
                    "type": "string"
                },
                "status": {
                    "type": "string"
                },
                "data": {
                    "type": "string",
                    "nullable": true
                }
            },
            "Error": {
                "type": "array",
                "$ref": "#/definitions/Error"
            }
        }
    },
    "schemes": ["https"],
    "consumes": ["application/json"],
    "produces": ["application/json"]
}